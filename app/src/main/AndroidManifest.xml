<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.numbuddy">

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:resizeable="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_numbuddy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_numbuddy_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NumBuddy">
        <activity android:name=".ArithmeticActivity" />
        <activity android:name=".AlgebraActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".TrigoActivity" />
        <activity android:name=".MiniHardGamesActivity" />
        <activity android:name=".GeometryActivity" />
        <activity android:name=".FormulaActivity" />
        <activity android:name=".MiniMedGamesActivity" />
        <activity android:name=".MiniEasyGamesActivity" />
        <activity android:name=".MiniGamesActivity" />
        <activity android:name=".UnitConverterActivity" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".easyPopWin"
            android:theme="@style/AppTheme.CustomTheme"
            ></activity>
        <activity android:name=".medPopWin"
            android:theme="@style/AppTheme.CustomTheme"
            ></activity>
        <activity android:name=".hardPopWin"
            android:theme="@style/AppTheme.CustomTheme"
            ></activity>
    </application>

</manifest>